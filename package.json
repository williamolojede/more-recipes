{
  "name": "more-recipes",
  "version": "1.0.0",
  "description": "A platform for users to share the awesome and exciting recipes ideas they have learnt or invented",
  "main": "server/app.js",
  "scripts": {
    "start": "babel-node server/app.js",
    "start:dev": "cross-env NODE_ENV=development nodemon --exec babel-node server/app.js",
    "build:prod": "npm run clean && webpack -p --config webpack.config.prod.js",
    "build:dev": "npm run clean && webpack -p --config webpack.config.dev.js",
    "test-local": "npm run migrate-test && cross-env NODE_ENV=test-local nyc mocha --timeout 10000 server/test",
    "test": "nyc mocha --timeout 10000 server/test",
    "migrate": "sequelize db:migrate:undo:all&&sequelize db:migrate",
    "migrate-test": "sequelize db:migrate:undo:all --env=test-local&&sequelize db:migrate --env=test-local",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "clean": "rimraf dist"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text",
      "html",
      "text-summary"
    ],
    "exclude": [
      "server/test"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/williamolojede/more-recipes.git"
  },
  "keywords": [],
  "author": "William Olojede",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/williamolojede/more-recipes/issues"
  },
  "homepage": "https://github.com/williamolojede/more-recipes#readme",
  "devDependencies": {
    "babel-preset-react": "^6.24.1",
    "chai": "^4.0.2",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.7",
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^11.1.0",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "bcrypt": "^1.0.3",
    "body-parser": "^1.17.2",
    "connect-pg-simple": "^4.2.1",
    "express": "^4.15.4",
    "express-session": "^1.15.5",
    "file-loader": "^0.11.2",
    "jsonwebtoken": "^7.4.3",
    "jwt-simple": "^0.5.1",
    "morgan": "^1.8.2",
    "nodemon": "^1.12.0",
    "node-sass": "^4.5.3",
    "pg": "^7.2.0",
    "pg-hstore": "^2.3.2",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-hot-loader": "^1.3.1",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "rimraf": "^2.6.1",
    "sequelize": "^4.7.5",
    "sequelize-cli": "^2.8.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "url-loader": "^0.5.9",
    "webpack": "^3.6.0",
    "webpack-dev-middleware": "^1.12.0",
    "webpack-dev-server": "^2.8.2",
    "extract-text-webpack-plugin": "^3.0.0",
    "html-webpack-plugin": "^2.30.1",
    "webpack-hot-middleware": "^2.19.1"
  }
}
