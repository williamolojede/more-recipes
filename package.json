{
  "name": "more-recipes",
  "version": "1.0.0",
  "description": "A platform for users to share the awesome and exciting recipes ideas they have learnt or invented",
  "main": "server/app.js",
  "scripts": {
    "start": "nodemon --exec babel-node server/app.js",
    "test-local": "npm run migrate-test && NODE_ENV=test-local nyc --reporter=html --reporter=text  mocha --compilers js:babel-core/register --timeout 10000 server/test/test.js",
    "test": "mocha --require babel-core/register server/test/test.js",
    "migrate": "sequelize db:migrate:undo:all&&sequelize db:migrate",
    "migrate-test": "sequelize db:migrate:undo:all --env=test-local&&sequelize db:migrate --env=test-local",
    "shc": "start coverage/lcov-report/index.html",
    "coverage": "nyc npm test && nyc report --reporter=text-lcov | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/williamolojede/more-recipes.git"
  },
  "keywords": [],
  "author": "William Olojede",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/williamolojede/more-recipes/issues"
  },
  "homepage": "https://github.com/williamolojede/more-recipes#readme",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.25.0",
    "babel-plugin-istanbul": "^4.1.4",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.0.2",
    "coveralls": "^2.13.1",
    "cross-env": "^5.0.5",
    "eslint": "^4.5.0",
    "eslint-config-airbnb": "^15.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.3.0",
    "istanbul": "^0.4.5",
    "mocha": "^3.4.2",
    "mocha-lcov-reporter": "^1.3.0",
    "nyc": "^11.1.0",
    "supertest": "^3.0.0"
  },
  "dependencies": {
    "bcrypt": "^1.0.3",
    "body-parser": "^1.17.2",
    "connect-pg-simple": "^4.2.1",
    "express": "^4.15.4",
    "express-session": "^1.15.5",
    "jsonwebtoken": "^7.4.3",
    "jwt-simple": "^0.5.1",
    "morgan": "^1.8.2",
    "pg": "^7.2.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^4.7.5",
    "sequelize-cli": "^2.8.0"
  }
}
